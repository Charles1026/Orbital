doctype html
html(lang='en')
  head
    title Lace Up
    link(rel='icon' type='image/png' href='../img/favicon_io/android-chrome-192x192.png' sizes='192x192')
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    // Latest compiled and minified CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet')
    // Latest compiled JavaScript
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
    // JQuery
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js')
  body
    // Navigation Block
    block navigation
      nav.navbar.navbar-expand-lg.navbar-light.bg-dark(style='padding-left: 100px;')
        a.navbar-brand.text-warning.pl-5(href='/')
          img(src='../img/favicon_io/android-chrome-192x192.png' style='height: 3vh;')
          |         Lace Up
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNavAltMarkup.collapse.navbar-collapse
          .navbar-nav
            a.nav-item.nav-link.text-warning(href='/') Home
            a.nav-item.nav-link.text-warning(href='/profile') Profile
            a.nav-item.nav-link.text-warning(href='/login') Login
            a.nav-item.nav-link.text-warning(href='/register') Register
            a.nav-item.nav-link.text-warning(href='/logout') Logout
    
    // Content Block
    block content
      .container-fluid(style='background: url(./img/basketball_court.jpg); background-size: cover; background-repeat: no-repeat; height: 100vh; display: flex; align-items: center;')
        .pl-5.text-black
          h1 Where Ballers Meet