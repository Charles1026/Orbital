doctype html
html(lang='en')
  head
    title Lace Up
    link(rel='icon' type='image/png' href='../img/favicon_io/android-chrome-192x192.png' sizes='192x192')
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    // Latest compiled and minified CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet')
    // Latest compiled JavaScript
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
    // JQuery
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-dark
      .container-fluid
        a.navbar-brand.text-warning.pl-5(href='/')
          img(src='./img/favicon_io/android-chrome-192x192.png' style='height: 3vh;')
          |           Lace Up
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          .btn-group.navbar-btn
            button.btn.btn-warning(type='button')
              a.nav-link.text-dark(href='/profile') Profile
            button.btn.btn-warning.dropdown-toggle.dropdown-toggle-split(type='button' data-bs-toggle='dropdown' aria-expanded='false')
              span.visually-hidden Toggle Dropdown
            ul.dropdown-menu.dropdown-menu-dark(aria-labelledby='navbarDropdown')
              a.dropdown-item.text-warning(href='/login') Login
              a.dropdown-item.text-warning(href='/register') Register
              li
                hr.dropdown-divider
              a.dropdown-item.text-warning(href='/logout') Logout
          .btn-group.navbar-btn
            button.btn.btn-warning(type='button')
              a.nav-link.text-dark(href='/games') Find a Game
            button.btn.btn-warning.dropdown-toggle.dropdown-toggle-split(type='button' data-bs-toggle='dropdown' aria-expanded='false')
              span.visually-hidden Toggle Dropdown
            ul.dropdown-menu.dropdown-menu-dark(aria-labelledby='navbarDropdown')
              a.dropdown-item.text-warning(href='/games/create') Create Game
              a.dropdown-item.text-warning(href='/games/history') Game History
          .btn-group.navbar-btn
            button.btn.btn-warning(type='button')
              a.nav-link.text-dark(href='/courts') Courts
            button.btn.btn-warning.dropdown-toggle.dropdown-toggle-split(type='button' data-bs-toggle='dropdown' aria-expanded='false')
              span.visually-hidden Toggle Dropdown
            ul.dropdown-menu.dropdown-menu-dark(aria-labelledby='navbarDropdown')
              a.dropdown-item.text-warning(href='/courts/register') Register A Court

    
    // Content Block
    block content
      .container-fluid(style='background: url(./img/basketball_court.jpg); background-size: cover; background-repeat: no-repeat; height: 100vh; display: flex; align-items: center;')
        .pl-5.text-black
          h1 Where Ballers Meet